<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The bottom layer is red color rectangle with green border. -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke
                android:width="5dp"
                android:color="@color/cardview_light_background" />
            <padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp" />
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>
    <!-- The top layer is an image. -->
    <item
        android:width="300dp"
        android:height="300dp"
        android:drawable="@drawable/logo"
        android:gravity="center"></item>
</layer-list>